{{#partial "content"}}

    {{#if editWalkerName}}
        <h1>Edit this Walker!</h1>
        <form action="/walker/{{editWalker.id}}/update" method="post">
            <label for="walkerName">Edit this walker's name</label>
            <input id="walkerName" name="walkerName" type="text" value="{{editWalker.walkerName}}">

    {{else}}
        <h1>Add a new Walker!</h1>

        <form action="/walker/new" method="post">
            <label for="walkerName">Walker Name</label>
            <input id="walkerName" name="walkerName" type="text">

        <button type="submit" class="btn btn-default">Add new walker</button>
        </form>

{{/partial}}

{{> layout.hbs}}